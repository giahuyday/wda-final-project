<body class="bg-gradient-primary">
    <div class="container">
        <div
            class="login row align-items-center min-vh-100 margin-bottom-20 d-flex justify-content-center
            focus-ring py-1 px-2 text-decoration-none border rounded-2">
            <div class="col-md-8 col-lg-6">
                <div
                    class="card o-hidden border-0 shadow-lg justify-content-center gap-5"
                    style="border: 1px solid #ddd; padding: 10px;">
                    <div class="card-body gap-2">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Welcome
                                Back!</h1>
                        </div>
                        <form class="user" id="loginForm">
                            <div class="form-group mt-2">
                                <input type="text"
                                    class="form-control form-control-user"
                                    id="username"
                                    aria-describedby="emailHelp"
                                    placeholder="Enter Email Address..." />
                            </div>
                            <div class="form-group mt-2">
                                <input type="password"
                                    class="form-control form-control-user"
                                    id="password"
                                    placeholder="Password" />
                            </div>
                            <div class="form-group mt-2">
                                <div
                                    class="custom-control custom-checkbox small">
                                    <input type="checkbox"
                                        class="custom-control-input"
                                        id="customCheck">
                                    <label class="custom-control-label"
                                        for="customCheck">Remember
                                        Me</label>
                                </div>
                            </div>
                            <div
                                class="form-group d-flex justify-content-center">
                                <button
                                    class="btn btn-primary btn-user btn-block w-50"
                                    type="submit">Login</button>
                            </div>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small"
                                href="forgot-password.html">Forgot
                                Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="/auth/signup">Create
                                an
                                Account!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    document.getElementById('loginForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Ngăn chặn form tự động submit

        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        console.log(username, password)
        fetch('/auth/api/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ user_name: username, user_password: password }),
        })
        .then((response) => {
            console.log(response.json())
        })
    });
</script>