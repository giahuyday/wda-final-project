  <!-- Add the following script to handle the click event and redirect to the search page -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Lấy danh sách các thẻ <a> có class "category-link"
      const categoryLinks = document.querySelectorAll('.category-link');

      // Xử lý sự kiện khi click vào mỗi link
      categoryLinks.forEach(function (link) {
        link.addEventListener('click', function (event) {
          event.preventDefault(); // Ngăn chặn hành động mặc định của thẻ <a>

          const category = link.getAttribute('data-category');

          // Gửi request POST đến server
          fetch('/product/api/search', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ category: category }),
          })
          .then(response => response.json())
          .then(data => {
            // Xử lý dữ liệu nhận về từ server ở đây
            console.log(data);
            window.location.href = '/product/search/:category'
          })
          .catch(error => {
            console.error('Error:', error);
          });
        });
      });
    });
  </script>